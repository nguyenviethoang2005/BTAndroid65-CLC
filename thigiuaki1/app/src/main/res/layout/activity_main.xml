<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F3FF">

    <ImageView
        android:id="@+id/imgDoctor"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/doctor"
        android:background="@drawable/bg_doctor_frame"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:contentDescription="@string/doctor_image" />

    <Button
        android:id="@+id/btnBMI"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="BMI"
        android:backgroundTint="#7A47E5"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnMonAn"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="Món Ăn"
        android:backgroundTint="#7A47E5"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnBaiThuoc"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="Bài Thuốc"
        android:backgroundTint="#7A47E5"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnGioiThieu"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="Giới Thiệu"
        android:backgroundTint="#7A47E5"
        android:textColor="#FFF" />

</LinearLayout>
