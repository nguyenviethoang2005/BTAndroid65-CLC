<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F1FF"
    tools:context=".BMIActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 🔹 Phần đầu: Bác sĩ + chữ ngang bên phải -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:background="@drawable/border_doctor"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Hình bác sĩ -->
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/doctor"
                android:contentDescription="@string/app_name" />

            <!-- Chữ bên phải -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tính chỉ số cơ thể"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- 🔹 Nhập liệu BMI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="30dp">

            <EditText
                android:id="@+id/edtHeight"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:hint="Nhập chiều cao (cm)"
                android:background="@drawable/rounded_button"
                android:padding="10dp"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/edtWeight"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:hint="Nhập cân nặng (kg)"
                android:background="@drawable/rounded_button"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="numberDecimal" />

            <!-- Checkbox chọn khu vực -->
            <CheckBox
                android:id="@+id/chkChauA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi là người châu Á"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="#333333" />

            <!-- Nút tính BMI -->
            <Button
                android:id="@+id/btnTinhBMI"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Tính BMI"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Ô hiển thị kết quả -->
            <TextView
                android:id="@+id/txtKetQua"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:text="Kết quả BMI sẽ hiển thị tại đây"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
